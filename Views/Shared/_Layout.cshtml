<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("head", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NbdAplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-success border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Files/Images/NBDLogo.png" class="img-center" height="80" width="80" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bolder table-hover" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!--dropdown Menu Start-->
                        @if (User.Identity.IsAuthenticated)
                        {
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Clients" asp-action="Index">Client</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Projects" asp-action="Index">Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Bids" asp-action="Index">Bids</a>
                        </li>
                            if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                            {
                                <li class="dropdown">
                                    <a class="dropdown-toggle nav-link text-dark font-weight-bolder" data-toggle="dropdown">
                                        NBD
                                        <span class="caret"></span>
                                        </a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Sales" asp-action="Index">Sales</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Designers" asp-action="Index">Designers</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Occupations" asp-action="Index">Occupation</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Nbdstaffs" asp-action="Index">NBD Staff</a>
                                        </li>
                                    </ul>
                                    </li>
                            }
                                <li class="dropdown">
                                    <a class="dropdown-toggle nav-link text-dark font-weight-bolder" data-toggle="dropdown">
                                        Tasks/Materials
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Tasks" asp-action="Index">Task</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Inventories" asp-action="Index">Inventory</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Materials" asp-action="Index">Material</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="Labours" asp-action="Index">Labour</a>
                                        </li>
                                    </ul>
                                    </li>
                            }
                        @if (User.IsInRole("Admin"))
                        {
                    <li class="nav-item">
                        <a class="nav-link text-dark font-weight-bolder" asp-area="" asp-controller="UserRoles" asp-action="Index">All Users</a>
                    </li>}
                    </ul>

</div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark bg-success">
        <div class="container font-weight-bold">
            &copy; 2021 - NbdAplication created bt Squilliam - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
