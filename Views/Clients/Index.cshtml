@model IEnumerable<NbdAplication.Models.Client>

@{
    ViewData["Title"] = "Index";
}
@section head{
    <style type="text/css">
        body, header {
            background-image: url('../Files/Images/greygreen.jpg');
            background-size: cover;
            height: auto;
        }
    </style>
}
<h1>Clients</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary font-weight-bold">Create New</a>
</p>



<form asp-action="Index" method="get">
    @*<div class="form-actions no-color">
            <p>
                Find by name of Project/Project Site: <input type="text" name="SearchString" value="@ViewData["SearchFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" /> |
                <a asp-action="Index">Clear Filter</a>
            </p>
        </div>*@
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" value="@ViewData["SearchFilter"]" placeholder="Find by name of names of client/contact or a phone number." aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
            <a class="btn btn-outline-secondary" asp-action="Index">Clear Filter</a>
        </div>
    </div>
</form>


<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortClients="@ViewData["ClientSortParm"]">@Html.DisplayNameFor(model => model.ClientName)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortClients="@ViewData["ContactSortFirst"]"> @Html.DisplayNameFor(model => model.ContactFirst)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortClients="@ViewData["ContactSortLast"]"> @Html.DisplayNameFor(model => model.ContactLast)</a>
</th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPos)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactPhone)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactFirst)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactLast)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactPos)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPhone)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientId" class="btn btn-outline-secondary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientId" class="btn btn-outline-info">Details</a>
                    @*<a asp-action="Delete" asp-route-id="@item.ClientId" class="btn btn-outline-danger">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
